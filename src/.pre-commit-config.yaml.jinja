[% if repository_visibility == 'public' -%]
ci:
  autofix_commit_msg: 'style: auto fixes'
  autofix_prs: true
  autoupdate_schedule: monthly
  autoupdate_commit_msg: 'chore(deps): pre-commit autoupdate'

[% endif -%]

repos:
  - repo: https://github.com/pre-commit/pre-commit-hooks
    [#- renovate: datasource=github-tags depName=pre-commit/pre-commit-hooks #]
    rev: v6.0.0
    hooks:
      - id: check-json
        exclude: "\\.vscode/.*.json"
      - id: check-toml
      - id: check-yaml
      - id: end-of-file-fixer
      - id: trailing-whitespace

  - repo: https://github.com/tox-dev/pyproject-fmt
    [#- renovate: datasource=github-tags depName=tox-dev/pyproject-fmt #]
    rev: v2.11.1
    hooks:
      - id: pyproject-fmt

  - repo: https://github.com/astral-sh/ruff-pre-commit
    [#- renovate: datasource=github-tags depName=astral-sh/ruff-pre-commit #]
    rev: v0.14.10
    hooks:
      - id: ruff-check
        args: [--fix, --exit-non-zero-on-fix, --show-fixes]
      - id: ruff-format

  - repo: https://github.com/python-jsonschema/check-jsonschema
    [#- renovate: datasource=github-tags depName=python-jsonschema/check-jsonschema #]
    rev: 0.36.0
    hooks:
[%- if dependency_management_tool == 'Dependabot' %]
    - id: check-dependabot
[%- elif dependency_management_tool == 'Renovate' %]
    - id: check-renovate
      additional_dependencies:
      [#- renovate: datasource=pypi depName=pyjson5 #]
      - pyjson5==2.0.0
[%- endif %]
    - id: check-github-workflows
    - id: check-meltano
